{
    "defaultSeverity": "error",
    "extends": [
        "tslint:recommended"
    ],
    "jsRules": {},
    "rules": {
        "only-arrow-functions": true,
        "object-literal-sort-keys": true,
        "trailing-comma": [
            true,
            {
                "multiline": "always",
                "singleline": "never"
            }
        ],
        "no-consecutive-blank-lines": [
            true,
            1
        ],
        "ordered-imports": [
            true,
            {
                "import-sources-order": "lowercase-first",
                "named-imports-order": "lowercase-first"
            }
        ],
        "curly": [
            true,
            "ignore-same-line"
        ],
        "no-null-keyword": true,
        "no-string-throw": true,
        "prefer-const": true,
        "member-ordering": [
            true,
            {
                "order": "instance-sandwich"
            }
        ],
        "no-return-await": true,
        "no-string-literal": true,
        "no-var-keyword": true,
        "static-this": true,
        "arrow-return-shorthand": [
            true,
            "multiline"
        ],
        "comment-format": [
            true,
            "check-space",
            "check-lowercase",
            {
                "ignore-words": [
                    "TODO",
                    "HACK"
                ]
            }
        ],
        "file-header": [
            true,
            {
                "match": "Source \\S+",
                "allow-single-line-comments": true,
                "default": "Source https://github.com/donmahallem/TrapezeApiTypes",
                "enforce-trailing-newline": false
            }
        ],
        "no-angle-bracket-type-assertion": true,
        "no-boolean-literal-compare": true
    },
    "rulesDirectory": []
}