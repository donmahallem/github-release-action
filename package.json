{
  "name": "@donmahallem/github-release-action",
  "version": "0.0.1",
  "description": "Require Labels for Github Actions",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "private": false,
  "keywords": [
    "api",
    "types"
  ],
  "scripts": {
    "test": "mocha",
    "start": "npm run build:live",
    "build:live": "nodemon",
    "build": "tsc",
    "test-ci": "nyc npm run test",
    "lint": "tslint -c tslint.json -p tsconfig-lint.json src/**/*.ts",
    "lint-fix": "tslint --fix -c tslint.json -p tsconfig-lint.json src/**/*.ts",
    "docs": "typedoc --options typedoc.json",
    "test:lint": "npm run lint",
    "test:build": "npm run build",
    "test:unit": "npm run test-ci",
    "test:docs": "npm run docs",
    "ncc:build": "ncc build ./src/index.ts -o ./dist -s",
    "ncc:run": "ncc run"
  },
  "homepage": "https://donmahallem.github.io/github-release-action/",
  "author": {
    "name": "donmahallem",
    "email": "donmahallem@users.noreply.github.com",
    "url": "https://github.com/donmahallem"
  },
  "license": "Apache-2.0",
  "bugs": {
    "url": "https://github.com/donmahallem/github-release-action/issues"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/donmahallem/github-release-action.git"
  },
  "engines": {
    "node": ">=8.0.0"
  },
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "lib": [
      "es2017",
      "es7",
      "es6",
      "dom"
    ],
    "declaration": true,
    "outDir": "./dist/",
    "baseUrl": "./src/",
    "strict": true,
    "esModuleInterop": true
  },
  "devDependencies": {
    "@types/chai": "~4.2.6",
    "@types/mocha": "~5.2.7",
    "@types/node": "~12.12.14",
    "@types/sinon": "~7.5.1",
    "@zeit/ncc": "~0.20.5",
    "chai": "~4.2.0",
    "mocha": "~6.2.2",
    "nodemon": "~2.0.1",
    "nyc": "~14.1.1",
    "sinon": "~7.5.0",
    "ts-node": "~8.5.4",
    "tslint": "~5.20.1",
    "typedoc": "~0.15.3",
    "typescript": "~3.7.3"
  },
  "nyc": {
    "include": [
      "src/*.ts",
      "src/**/*.ts"
    ],
    "exclude": [
      "typings",
      "src/**/*.spec.ts",
      "**/*.d.ts"
    ],
    "extension": [
      ".ts"
    ],
    "require": [
      "ts-node/register"
    ],
    "reporter": [
      "json",
      "html",
      "text-summary",
      "lcov"
    ],
    "sourceMap": true,
    "instrument": true,
    "all": true
  },
  "files": [
    "dist/*",
    "src/*"
  ],
  "dependencies": {
    "@actions/core": "~1.2.0",
    "@actions/github": "~1.1.0"
  }
}
